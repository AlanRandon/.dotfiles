# Logo key
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term alacritty
set $browser firefox
set $menu exec sh -c "swaymsg fullscreen disable && TERMINAL=$term $term -o window.opacity=1 --class launcher -e sway-launcher-desktop"

# Reload the configuration file
bindsym $mod+Shift+c reload

bindsym $mod+Ctrl+l exec swaylock -i ~/projects/.dotfiles/sway/wallpaper.jpg --grace 0

set $exit "Exit (Q)uit Sway/(S)hutdown"
bindsym $mod+Shift+e mode $exit
mode $exit {
    bindsym Return mode "default"
    bindsym Escape mode "default"

    bindsym Q exec swaymsg exit
    bindsym S exec shutdown -h now
}

bindsym $mod+Shift+q kill

bindsym $mod+Return exec $term
bindsym $mod+b exec $browser
bindsym $mod+d exec $menu

bindsym $mod+f fullscreen

# Toggle touchpad
bindsym $mod+t exec swaymsg input type:touchpad events toggle enabled disabled

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to scratchpad, workspace number 1, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+2 move container to scratchpad, workspace number 2, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+3 move container to scratchpad, workspace number 3, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+4 move container to scratchpad, workspace number 4, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+5 move container to scratchpad, workspace number 5, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+6 move container to scratchpad, workspace number 6, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+7 move container to scratchpad, workspace number 7, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+8 move container to scratchpad, workspace number 8, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+9 move container to scratchpad, workspace number 9, focus next, exec ~/scripts/sway_pop_scratchpad
bindsym $mod+Shift+0 move container to scratchpad, workspace number 10, focus next, exec ~/scripts/sway_pop_scratchpad

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

floating_modifier $mod normal

bindsym $mod+a focus parent

set $resize "Resize"
bindsym $mod+r mode $resize
mode $resize {
    bindsym Return mode "default"
    bindsym Escape mode "default"

    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
}

set $source_volume "Source Volume"
bindsym $mod+v mode $source_volume
mode $source_volume {
	bindsym Return mode "default"
	bindsym Escape mode "default"

	set $round_sink pactl get-sink-volume @DEFAULT_SINK@ | awk 'NR==1{print(sprintf("%.0f",$5/5)*5)"%"}' | xargs pactl set-sink-volume @DEFAULT_SINK@
	set $round_source pactl get-source-volume @DEFAULT_SOURCE@ | awk 'NR==1{print(sprintf("%.0f",$5/5)*5)"%"}' | xargs pactl set-source-volume @DEFAULT_SOURCE@
	bindsym r exec $round_sink && $round_source

	bindsym XF86AudioRaiseVolume exec pactl set-source-volume @DEFAULT_SOURCE@ +5%
	bindsym XF86AudioLowerVolume exec pactl set-source-volume @DEFAULT_SOURCE@ -5%
	bindsym XF86AudioMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
}

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

bindsym Print exec ~/scripts/screenshot screen
bindsym $mod+Print exec ~/scripts/screenshot window
bindsym $mod+Shift+Print exec ~/scripts/screenshot select

set $media "Media"
bindsym $mod+m mode $media
mode $media {
	bindsym Return mode "default"
	bindsym Escape mode "default"

	bindsym space exec playerctl play-pause
	bindsym $left exec playerctl position 5-
	bindsym $right exec playerctl position 5+
	bindsym $up exec playerctl previous
	bindsym $down exec playerctl next
}

# NASA apod for background
bindsym $mod+Alt+n exec ~/scripts/random-apod
bindsym $mod+Alt+Shift+n exec ~/scripts/random-apod reset

bindsym $mod+Shift+n exec alacritty -e nmtui
bindsym $mod+Shift+v exec pavucontrol

