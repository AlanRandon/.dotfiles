include keybinds
include catppuccin-frappe

font pango:"FiraMono Nerd Font" Regular 11

default_border none
for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10

seat seat0 xcursor_theme catppuccin-frappe-light-cursors

output * bg wallpaper.jpg fill

input * {
	xkb_layout "gb"
	dwt enabled
	tap enabled
	natural_scroll enabled
	middle_emulation enabled
}

seat * hide_cursor when-typing enable
seat * hide_cursor 8000
input type:touchpad events disabled

bar swaybar_command waybar

exec mako
exec_always ~/scripts/battery-notifier
exec_always ~/scripts/screenshare 
exec_always brightnessctl set 50%
exec_always pactl set-sink-volume @DEFAULT_SINK@ 75%

bindswitch --reload --locked lid:on exec swaylock -i ~/projects/.dotfiles/sway/wallpaper.jpg

include @sysconfdir@/sway/config.d/*
